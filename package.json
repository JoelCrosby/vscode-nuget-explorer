{
  "name": "nuget-explorer",
  "displayName": "NuGet Explorer",
  "description": "",
  "version": "0.0.1",
  "publisher": "joel-crosby",
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.csproj"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nuget-explorer",
          "title": "NuGet Explorer",
          "icon": "resources/nuget.svg",
          "when": "inDotnetProject"
        }
      ]
    },
    "views": {
      "nuget-explorer": [
        {
          "id": "nuget-installed",
          "name": "Installed Packages",
          "when": "inDotnetProject"
        }
      ]
    },
    "commands": [
      {
        "command": "nuget-explorer.refresh",
        "title": "NuGet: Refresh Packages",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "nuget-explorer.install",
        "title": "NuGet: Install Package",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "nuget-explorer.uninstall",
        "title": "Remove Package"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "nuget-explorer.refresh",
          "when": "view == nuget-installed",
          "group": "navigation"
        },
        {
          "command": "nuget-explorer.install",
          "when": "view == nuget-installed",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "nuget-explorer.uninstall",
          "when": "view == nuget-installed && viewItem == nugetPackage"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/xml2js": "^0.4.4",
    "@types/xmldom": "^0.1.29",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "xml2js": "^0.4.19"
  }
}
